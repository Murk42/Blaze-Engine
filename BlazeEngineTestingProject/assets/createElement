unit "createElement"

layer "bgLayer"
layer "mainLayer"

element Panel "bgPanel" ("bgLayer")
{
	clickable		= true

	borderWidth		= 0
	cornerRadius	= 0
	fillColor		= 0x202020cc
}

element Panel "menuPanel" ("mainLayer")
{
	size			= (500, 300)

	borderWidth		= 0
	cornerRadius	= 3
	fillColor		= 0x333333ee
}

element TextButton "cancelButton" ("mainLayer")
{
	anchor				= "createElement::menuPanel"
	localAlignment		= BottomRight
	anchorAlignment		= BottomRight
	pos					= (-10, 10)
	size				= (70, 20)

	text				= "Cancel"
	font				= "font14"
	fontSize			= 14

	borderWidth			= 0
	cornerRadius		= 3

	pressed				= "createElement::cancelButtonPressed"
}

element TextButton "createButton" ("mainLayer")
{
	anchor				= "createElement::cancelButton"
	localAlignment		= Right
	anchorAlignment		= Left
	pos					= (-10, 0)
	size				= (70, 20)

	text				= "Create"
	font				= "font14"
	fontSize			= 14

	borderWidth			= 0
	cornerRadius		= 3

	pressed				= "createElement::createButtonPressed"
}

element Text "menuLabel" ("mainLayer")
{
	anchor				= "createElement::menuPanel"
	localAlignment		= Top
	anchorAlignment		= Top
	pos					= (0, -10)

	font				= "font18"
	fontSize			= 18
	text				= "New Element"
}

element Text "elementNameText" ("mainLayer")
{
	font				= "font14"
	fontSize			= 14
	text				= "Name:"
}

element TextField "elementName" ("mainLayer")
{
	anchor				= "createElement::elementNameText"
	localAlignment		= Left
	anchorAlignment		= Right
	pos					= (5, 0)

	size				= (100, 20)

	font				= "font14"
	fontSize			= 14

	borderWidth			= 0
	cornerRadius		= 3
}

element Text "elementTypeText" ("mainLayer")
{	
	font				= "font14"
	fontSize			= 14
	text				= "Type:"
}
element DropdownSelection "elementType" ("mainLayer")
{	
	anchor				= "createElement::elementTypeText"
	localAlignment		= Left
	anchorAlignment		= Right
	pos					= (5, 0)

	size				= (60, 20)

	font				= "font14"
	fontSize			= 14

	options				= { "Button", "Text", "Panel", "Image" }
	defaultOption		= 0
}

element List "propertiesList" ("mainLayer")
{
	anchor				= "createElement::menuPanel"
	localAlignment		= TopLeft
	anchorAlignment		= TopLeft
	pos					= (10, -50)

	elements = { "createElement::elementNameText", "createElement::elementTypeText" }
	elementSpacing = { (5, 7), (7, 5) }
}