layer "bgLayer"
layer "mainLayer"

Font "font" name = "Default font" {
	"font32" Antialiased 32
	"font14" Antialiased 14
}

Texture2D "defaultImage" path = "assets/default/default.png"
Texture2D "logo" path = "assets/logo.png"
	
element Panel "propertiesPanel" ("bgLayer") 
{			
	pos				= (10,-10) 
	size			= (200, 400)
	localAlignment	= TopLeft
	anchorAlignment = TopLeft

	borderWidth		= 0
	cornerRadius	= 5
	fillColor		= 0x222222EE
}

element Text "propertiesText" ("mainLayer") 
{
	font			= "font32"
	text			= "Properties"
	fontSize		= 32
	color			= 0xFFFFFFFF	
}

element Text "smallText" ("mainLayer") 
{	
	font			= "font14"
	text			= "Panel"
	fontSize		= 14
	color			= 0xFF0000FF
} 

element Image "image" ("mainLayer")
{
	size			= (32, 32)

	texture			= "defaultImage"
	sourceRect		= (0, 0) 32x32
}

element Slider "slider" ("mainLayer")
{
	size			= (180, 10)
	valueChanged	= "valueChanged"
}

element List "list" ("mainLayer")
{
	localAlignment	= TopLeft
	anchorAlignment = TopLeft
	anchor			= "propertiesPanel"	

	elements		= { 
		"propertiesText",
		"smallText",
		"image",
		"slider",
		"a"
	}	
}

element Dropdown "dropdown" ("mainLayer")
{
	pos				= (10, -10)
	anchor			= "propertiesPanel"
	anchorAlignment	= TopLeft
	localAlignment	= TopLeft

	text			= "Dropdown"

	openTexture		= "logo"
	openTextureRect	= (0, 0) 32x32

	closedTexture	= "logo"
	closedTextureRect	= (0, 0) 32x32

	font			= "font32"
	list			= "list"
}